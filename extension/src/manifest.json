{
  "manifest_version": 3,
  "name": "DoomScroller",
  "version": "1.0.0",
  "description": "Track your social media doomscrolling in meters. Compete with friends. Get roasted by AI.",
  "permissions": [
    "storage",
    "alarms",
    "activeTab"
  ],
  "host_permissions": [
    "https://facebook.com/*",
    "https://*.facebook.com/*",
    "https://fb.com/*",
    "https://*.fb.com/*",
    "https://x.com/*",
    "https://*.x.com/*",
    "https://twitter.com/*",
    "https://*.twitter.com/*",
    "https://tiktok.com/*",
    "https://*.tiktok.com/*",
    "https://instagram.com/*",
    "https://*.instagram.com/*",
    "https://snapchat.com/*",
    "https://*.snapchat.com/*",
    "https://reddit.com/*",
    "https://*.reddit.com/*",
    "https://youtube.com/*",
    "https://*.youtube.com/*",
    "https://pinterest.com/*",
    "https://*.pinterest.com/*"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://facebook.com/*",
        "https://*.facebook.com/*",
        "https://fb.com/*",
        "https://*.fb.com/*",
        "https://x.com/*",
        "https://*.x.com/*",
        "https://twitter.com/*",
        "https://*.twitter.com/*",
        "https://tiktok.com/*",
        "https://*.tiktok.com/*",
        "https://instagram.com/*",
        "https://*.instagram.com/*",
        "https://snapchat.com/*",
        "https://*.snapchat.com/*",
        "https://reddit.com/*",
        "https://*.reddit.com/*",
        "https://youtube.com/*",
        "https://*.youtube.com/*",
        "https://pinterest.com/*",
        "https://*.pinterest.com/*"
      ],
      "js": ["src/content/tracker.ts"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "public/icons/icon-16.png",
      "48": "public/icons/icon-48.png",
      "128": "public/icons/icon-128.png"
    }
  },
  "icons": {
    "16": "public/icons/icon-16.png",
    "48": "public/icons/icon-48.png",
    "128": "public/icons/icon-128.png"
  }
}
